---
import SupportButton from "./SupportButton.astro";
import Button from "./Button.astro";
---

<div class="wrap">
  <div class="container-inner">
    <h1>Friends for Fitz provides help to families in need.</h1>

    <p class="text-large">
      Every family deserves support in difficult times. Together, we can bring relief to families in our community.
    </p>

    <div class="actions">
      <SupportButton />
      <Button text="Contact Us" href="/contact" />
    </div>
  </div>
</div>

<style>
  h1 {
    margin-bottom: 16px;
  }

  p {
    margin-bottom: 24px;
  }

  .wrap {
    background-color: var(--color-green-pale);
    padding: 88px 20px;
  }

  .actions {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 24px;
  }

  @media (min-width: 800px) {
    h1 {
      color: var(--color-black);
      font-size: 60px;
      font-weight: 800;
      line-height: 66px;
      max-width: 600px;
    }

    p {
      max-width: 600px;
    }

    .actions {
      flex-direction: row;
    }
  }
</style>